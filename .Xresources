! vim: ft=xdefaults
! --[ Font Rendering ]-------------------------------------
Xft.dpi: 96
Xft.antialias: 1
Xft.rgba: rgb
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.autohint: false
Xft.lcdfilter: lcdlight

! --[ URxvt - General ]-------------------------------------
URxvt.loginShell:false
URxvt.scrollBar:false
URxvt.saveLines:5000
!URxvt.cursorColor:#83C048
URxvt.cursorColor: #DCDCCC
URxvt.cursorColor2: #FFFFEF
URxvt.highlightColor:#444444
URxvt.font: xft:Fira Code Retina:size=10
URxvt.boldFont: xft:Fira Code Retina:size=10:bold
URxvt.intensityStyles: false
URxvt.letterSpace: -1
URxvt.internalBorder: 0
!URxvt.underlineColor: #999999
URxvt.underlineColor: #F0DFAF
URxvt.cutchars: "()*,<>[]{}|'"
URxvt.print-pipe: cat >/tmp/xxx
URxvt.visualBell: false
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true
!URxvt.secondaryScroll: false

! --[ URxvt - URL/Clipboard Handling ]----------------------
URxvt.perl-ext-common: default,url-select,keyboard-select,vtwheel,font-size
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.urlLauncher: firefox
URxvt.underlineURLs: true
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.C-Up: font-size:increase
URxvt.keysym.C-Down: font-size:decrease
URxvt.keysym.C-S-Up: font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal

! --[ URxvt - colors ]--------------------------------------
URxvt.depth: 32
!URxvt.background: rgba:0000/0000/0000/A666
!URxvt.foreground: #eeeeee
URxvt*background: #3F3F3F
URxvt*foreground: #DCDCCC

